<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">
        <Button
            android:id="@+id/btnTrunOn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Turn On Bluetooth"
        android:layout_marginVertical="5dp"
            android:onClick="turnOnBluetooth"
        />
        <Button
            android:id="@+id/btnMakeVisible"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Make Me Visible"
            android:layout_marginVertical="5dp"
            android:onClick="turnOnVisibility"
            />
        <Button
            android:id="@+id/btnConnections"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Connections"
            android:layout_marginVertical="5dp"
            android:onClick="listPairedDevices"
            />
        <Button
            android:id="@+id/btnSerialTX"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Serial TX"
            android:layout_marginVertical="5dp"
            />
        <Button
            android:id="@+id/btnTurnOff"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Disconnect"
            android:layout_marginVertical="5dp"
            android:onClick="turnOffBluetooth"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
        <ListView
            android:id="@+id/lvDevices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

        />
    </LinearLayout>


</LinearLayout>